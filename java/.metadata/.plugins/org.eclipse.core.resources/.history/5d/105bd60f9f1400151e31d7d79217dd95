package cn.itcast.demo;

public class Demo01 {
   /*
    3   7
   2 4 6 8
  1   5   9
  
  平面图形题      (二维数组)
    */
	
	public static void main(String[] args) {
		int num=9;
		int arr[][]=new int[3][9];
		
		int x=2;
		int y=0;
		
		boolean order=false;
		for(int i=1;i<=9;i++){
			arr[x][y]=i;
			y++;
			
			if(order==false){
				x--;
			}
			if(order){
				x++;
			}
			if(x<0){
				order=true;
				x=x+2;
			}
			if(x>2){
				order=false;
				x=x-2;
			}
		}
	}
}
