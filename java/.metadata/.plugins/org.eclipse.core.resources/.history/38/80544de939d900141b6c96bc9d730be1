package cn.bjsxt.collection;


public class SxLinkedList /*implements List*/ {
      
	private Node first;
	private Node last;
	
	private int size;
	
	public void add(Object obj){
		Node n=new Node();
		if(first==null){
			n.setPrevious(null);
			n.setObj(obj);
			n.setNext(null);
			
			first=n;
			last=n;
		}else{
			//直接往last节点后增加新的节点
			n.setPrevious(last);
			n.setObj(obj);
			n.setNext(null);
			
			last.setNext(n);
			
			last=n;
		}
		size++;
	}
	
	public int size(){
		return size;
	}
	
    private void rangeCheck(int index){
  	  if(index<0||index>=size){
  		  try {
				throw new Exception();
			} catch (Exception e) {
				e.printStackTrace();
			}
  	  }
    }
    
	public Object get(int index){
		rangeCheck(index);
		Node temp=node(index);
		if(temp!=null){
			return temp.obj;
		}
		
		return null;
	}
	
	public Node node(int index){
		Node temp=null;
		if(first!=null){
			 temp=first;
			for(int i=0;i<index;i++){
				temp=temp.next;
			}
		}
		return temp;
	}
	public void remove(int index){
         Node temp=node(index);
		if(temp!=null){
			Node up=temp.previous;
			Node down=temp.next;
			up.next=down;
			down.previous=up;
			size--;
		}

	}
	
	public static void main(String[] args) {
		SxLinkedList list=new SxLinkedList();
		list.add("aaa");
		list.add("bbb");
		list.add("ccc");
		list.add("ddd");
		list.remove(2);
		System.out.println(list.get(1));
	}
}
